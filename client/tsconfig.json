{
	"compilerOptions": {
		"module": "ESNext",
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"rootDir": "src",
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["src/electron"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
